{{#if success}}
<div class="alert alert-secondary alert-dismissible  fade show" role="alert" style="background-color: #D8F793;">
    <strong>Genial!</strong> {{success}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}

{{#if danger}}
<div class="alert alert-danger alert-dismissible  fade show" role="alert">
    <strong>Alerta!</strong> {{danger}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
{{/if}}