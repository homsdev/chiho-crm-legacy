<link rel="stylesheet" href="/css/Signup.css">

<div class="container col-md-8 register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="/img/crm.png" alt="" />
            <h2>Bienvenido</h2>
            <h3>a</h3>
            <h1>ChiHo</h1>
            <a href="/signin" class="btn" role="button">Iniciar Sesión</a>
        </div>
        <div class="col-md-9 register-right">

            <form action="/signup" method="POST">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Registro</h3>
                        <div class="row register-form">
                            <div class="col-md-6">

                                <div class="form-group">
                                    <input name="name" type="text" class="form-control" placeholder="Nombres *" value=""
                                        required />
                                </div>

                                <div class="form-group">
                                    <input name="lastname" type="text" class="form-control" placeholder="Apellidos *"
                                        value="" required />
                                </div>

                                <div class="form-group">
                                    <input name="email" type="email" class="form-control"
                                        placeholder="Correo electrónico *" value="" required />
                                </div>

                                <div class="form-group">
                                    <input name="phone_number" type="text" minlength="10" maxlength="10"
                                        class="form-control" placeholder="Número Celular *" value="" required />
                                </div>

                                <div class="form-group">
                                    <input name="username" type="text" class="form-control"
                                        placeholder="Nombre usuario *" value="" required />
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="form-group">
                                    <input name="company_name" type="te" class="form-control" placeholder="Compañia *"
                                        required />
                                </div>

                                <div class="form-group">
                                    <input name="website" type="url" class="form-control"
                                        placeholder="Website (Opcional) *" value="" />
                                </div>

                                <div class="form-group">
                                    <select name="charge" class="custom-select custom-select-md">
                                        <option selected>Seleccione su puesto</option>
                                        <option value="Administrador">Administrador</option>
                                        <option value="Vendedor">Ventas</option>
                                        <option value="Asesor">Asesor</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <input name="password" type="password" class="form-control"
                                        placeholder="Contraseña *" value="" required />
                                </div>

                                <div class="form-group">
                                    <input name="password_b" type="password" class="form-control"
                                        placeholder="Confirmar Contraseña *" value="" required />
                                </div>

                            </div>

                            <div class="form-group">
                                <button align="center" href="/signin" type="sumbit" class="btn">Registrar</button>
                                {{!--<input type="submit" class="btnRegister"  value="Register"/>--}}
                            </div>

                        </div>

                    </div>
            </form>
        </div>
    </div>
</div>
</div>
</div>